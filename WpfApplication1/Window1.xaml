<Window x:Name="File_Sender" x:Class="Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="File Sender" Height="300" Width="300">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.InactiveBorderColorKey}}"/>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="53*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="cmdTest" Content="Send File" Grid.Column="1" HorizontalAlignment="Left" Margin="88,95,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button x:Name="Select_File" Content="Select File" Grid.Column="1" HorizontalAlignment="Left" Height="53" Margin="39,128,0,0" VerticalAlignment="Top" Width="103" Click="Button_Click_1"/>

    </Grid>
</Window>
